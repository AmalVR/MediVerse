# =============================================================================
# MediVerse Environment Configuration
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Single PostgreSQL instance with two databases: mediverse and moodle
DATABASE_URL="postgresql://mediverse:mediverse_password@localhost:5432/mediverse"
MOODLE_DB_URL="postgresql://mediverse:mediverse_password@postgres:5432/moodle"

# =============================================================================
# MOODLE LMS INTEGRATION
# =============================================================================
MOODLE_URL="http://localhost:8081"
MOODLE_API_URL="http://localhost:8081/webservice/rest/server.php"
MOODLE_API_TOKEN="your_moodle_api_token_here"
MOODLE_ADMIN_USERNAME="admin"
MOODLE_ADMIN_PASSWORD="admin123!"

# OAuth 2.0 Configuration (Google Cloud Console)
# Frontend variables (VITE_ prefix required for browser access)
VITE_MOODLE_OAUTH_CLIENT_ID="your_google_client_id"
VITE_MOODLE_OAUTH_CLIENT_SECRET="your_google_client_secret"
VITE_MOODLE_OAUTH_REDIRECT_URI="http://localhost:8080"

# =============================================================================
# GOOGLE CLOUD PLATFORM (GCP)
# =============================================================================
GOOGLE_APPLICATION_CREDENTIALS="./config/gcp-service-account.json"
VITE_GCP_PROJECT_ID="your-gcp-project-id"
GCP_DIALOGFLOW_AGENT_ID="projects/your-project-id/locations/us-central1/agents/your-agent-id"

# =============================================================================
# VIDEO STORAGE CONFIGURATION
# =============================================================================
# Options: local, s3, cloudinary, vimeo
VITE_VIDEO_STORAGE_TYPE="local"

# AWS S3 Configuration (if using S3)
VITE_S3_BUCKET_NAME="mediverse-videos"
VITE_S3_REGION="us-east-1"
VITE_S3_ACCESS_KEY_ID="your_s3_access_key_id"
VITE_S3_SECRET_ACCESS_KEY="your_s3_secret_access_key"

# Cloudinary Configuration (if using Cloudinary)
VITE_CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
VITE_CLOUDINARY_API_KEY="your_cloudinary_api_key"
VITE_CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Vimeo Configuration (if using Vimeo)
VITE_VIMEO_ACCESS_TOKEN="your_vimeo_access_token"

# YouTube Integration
VITE_YOUTUBE_API_KEY="your_youtube_api_key"
VITE_YOUTUBE_DEFAULT_CHANNEL_ID="your_youtube_channel_id"

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_URL="http://localhost:3000/api"
VITE_WS_URL="http://localhost:3001"
PORT="3000"
WS_PORT="3001"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_GCP_SPEECH="true"
VITE_ENABLE_VOICE_FEEDBACK="true"
VITE_ENABLE_REALTIME_SYNC="true"
VITE_UNITY_ENABLED="true"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV="development"
VITE_MODELS_BASE_URL="/models"

# =============================================================================
# DEPRECATED VARIABLES (TO BE REMOVED IN v2.0)
